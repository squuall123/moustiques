{% extends 'base.html.twig' %}

{% block body %}
<link rel="stylesheet" href="{{ asset('styles/profil.css') }}">
    <div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-4">
            <div class="text-center card-box">
                <div class="member-card">
                    <div class="thumb-xl member-thumb m-b-10 center-block">
                        <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="img-circle img-thumbnail" alt="profile-image">
                    </div>

                    <div class="">
                        <h4 class="m-b-5">{{moustique.name}}</h4>
                        <p class="text-muted">@{{moustique.name}}</p>
                        {% if app.user.moustiques is empty %}
                          <a href="/add/{{moustique.id}}" class="btn btn-success"> Ajouter Moustique</a>
                        {% else %}
                        {% for temp in app.user.moustiques %}
                          {% if moustique.id == temp.id %}
                          <a href="/remove/{{moustique.id}}" class="btn btn-danger"> Supprimer Moustique</a>
                          {% else %}
                          <a href="/add/{{moustique.id}}" class="btn btn-success"> Ajouter Moustique</a>
                          {% endif %}

                        {% endfor %}
                        {% endif %}
                        <br></br>
                    </div>


                    <div class="text-left m-t-40">
                        <p class="text-muted font-13"><strong>Full Name :</strong> <span class="m-l-15">{{moustique.name}}</span></p>
                        <p class="text-muted font-13"><strong>Email :</strong> <span class="m-l-15">{{moustique.email}}</span></p>
                    </div>

                </div>
            </div> <!-- end card-box -->
        </div> <!-- end col -->


        <div class="col-md-8 col-lg-9">
            <div class="">
                <div class="">
                    <ul class="nav nav-tabs navtab-custom">


                        <li class="active">
                            <a href="#settings" data-toggle="tab" aria-expanded="false">
                                <span class="visible-xs"><i class="fa fa-cog"></i></span>
                                <span class="hidden-xs">Profil</span>
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">

                        <div class="tab-pane active" id="settings">

                          <!-- User info -->
      <div class="panel panel-default">
        <div class="panel-heading">
        <h4 class="panel-title">Informations</h4>
        </div>
        <div class="panel-body">
          <table class="table profile__table">
            <tbody>
              <tr>
                <th><strong>Age</strong></th>
                <td>{{moustique.age}}</td>
              </tr>
              <tr>
                <th><strong>Famille</strong></th>
                <td>{{moustique.famille}}</td>
              </tr>
              <tr>
                <th><strong>Race</strong></th>
                <td>{{moustique.race}}</td>
              </tr>
              <tr>
                <th><strong>Nourriture</strong></th>
                <td>{{moustique.Nourriture}}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <!-- end row -->
</div>

{% endblock %}
